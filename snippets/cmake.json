{
  "basic": {
    "body": [
      "cmake_minimum_required(VERSION 3.10)",
      "project(\\$1)",
      "",
      "# Set C++ standard",
      "set(CMAKE_CXX_STANDARD 11)",
      "",
      "# Add executable",
      "add_executable(\\$1 \\$2)"
    ],
    "prefix": [
      "cpp",
      "c++"
    ]
  },
  "c": {
