{
  "/**": {
    "body": [
      "/*",
      " * $1",
      " */"
    ],
    "prefix": "/**"
  },
  "class": {
    "body": [
      "class $1 {",
      "public:",
      "private:",
      "};"
    ],
    "prefix": "class"
  },
  "ctrlc": {
    "body": [
      "// catch ctrl-c",
      "std::signal(SIGINT, [](int signal) {",
      "    std::cerr << std::endl << \"Goodbye!\" << std::endl;",
      "    ",
      "    $0",
      "",
      "    exit(1);",
      "});"
    ],
    "prefix": "ctrlc"
  },
  "imp[xdg-config-home]": {
    "body": [
      "std::string xdg_config_home() {",
      "  std::string config_home = std::getenv(\"XDG_CONFIG_HOME\") ?: (std::string(std::getenv(\"HOME\")) + \"/.config\");",
      "",
      "  if (!config_home.empty() && config_home.back() != '/') {",
      "    config_home += '/';",
      "  }",
      "",
      "  return config_home;",
      "}"
    ],
    "prefix": "imp[xdg-config-home]"
  },
  "main()": {
    "body": [
      "#include <iostream>",
      "",
      "int main()",
      "{",
      "    $1",
      "",
      "    return 0;",
      "};"
    ],
    "prefix": "main"
  },
